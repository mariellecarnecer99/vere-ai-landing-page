---
import { Image } from "astro:assets";
import CheckCircle from "../assets/check_circle.svg";
import Link from "./ui/link.astro";

const pricing = [
	{
		plan: "Free",
		price: "$0.00",
		button: "GET STARTED",
		inclusions: [
			{
				item: "2 chat bots only",
				transparent: true,
			},
			{
				item: "10,000 chat tokens only",
				transparent: true,
			},
			{
				item: "10,000 data tokens only",
				transparent: true,
			},
			{
				item: "Chatbot UI Customization",
				transparent: false,
			},
			{
				item: "Talk with a human",
				transparent: false,
			},
			{
				item: "GPT-3.5 only",
				transparent: true,
			},
		],
	},
	{
		plan: "Basic",
		price: "$14.00",
		button: "GET STARTED",
		inclusions: [
			{
				item: "Max of 3 chat bots",
				transparent: false,
			},
			{
				item: "1,000,000 chat tokens",
				transparent: false,
			},
			{
				item: "1,000,000 data tokens",
				transparent: false,
			},
			{
				item: "Chatbot UI Customization",
				transparent: false,
			},
			{
				item: "Talk with a human",
				transparent: false,
			},
			{
				item: "Option to use latest AI Models (eg. GPT-4)",
				transparent: false,
			},
		],
	},
	{
		plan: "Enterprise",
		price: "Contact Sales",
		button: "CONTACT SALES",
		inclusions: [
			{
				item: "Need a custom package for your business? Contact sales on how we can help!",
				transparent: false,
			},
		],
	},
];
---

<div id="pricing" class="max-w-screen-xl mx-auto px-5 my-40">
	<div class="mt-16 md:mt-0">
		<h2 class="text-2xl font-bold text-black">Pricing</h2>
	</div>

	<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-12 gap-16">
		{
			pricing.map((item) => (
				<>
					<div class="border-solid border-2 rounded py-6 px-8">
						<div class="grid grid-cols-2">
							<h3 class="font-bold text-pricing text-z-black">{item.plan}</h3>
							{item.plan === "Basic" && (
								<h3 class="my-auto mx-auto mr-0 px-2 py-1 text-white text-popular text-center font-medium bg-green rounded-2xl">
									Most Popular
								</h3>
							)}
						</div>

						<p class="text-lg font-black text-z-black mt-2 mb-5">
							{item.price}
							{item.price != "Contact Sales" && (
								<span class="text-prices font-bold">/month</span>
							)}
						</p>

						<Link
							href="#"
							style="inverted"
							class="text-navBtn font-medium block mb-5"
						>
							{item.button}
						</Link>
						<ol>
							{item.inclusions.map((item) =>
								item.item !=
								"Need a custom package for your business? Contact sales on how we can help!" ? (
									<div class="flex gap-4 my-3">
										<Image alt="CheckCircle" src={CheckCircle} />
										{item.transparent === true ? (
											<li class="text-base text-black transparent">
												{item.item}
											</li>
										) : (
											<li class="text-base text-black">{item.item}</li>
										)}
									</div>
								) : (
									<li class="text-base text-black">{item.item}</li>
								)
							)}
						</ol>
					</div>
				</>
			))
		}
	</div>
</div>

<style>
	.transparent {
		color: transparent;
		text-shadow: 0 0 0 rgba(0, 0, 0, 0.5);
	}
	.transparentImg {
		filter: blur(1px);
	}
</style>
