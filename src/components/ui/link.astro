---
interface Props {
	href: string;
	size?: "sm" | "md" | "lg";
	block?: boolean;
	style?: "outline" | "primary" | "inverted" | "muted";
	class?: string;
	[x: string]: any;
}

const {
	href,
	block,
	size = "lg",
	style = "primary",
	class: className,
	...rest
} = Astro.props;

const sizes = {
	lg: "px-5 py-2.5",
	md: "px-4 py-2",
	sm: "px-3 py-1",
};

const styles = {
	outline: "bg-white border-2 border-black hover:bg-gray-100 text-black ",
	primary:
		"bg-orange text-white hover:bg-white hover:text-orange border-2 border-transparent",
	inverted:
		"bg-orange text-white hover:bg-dark-blue hover:text-orange border-2 border-transparent",
	muted: "bg-gray-100 hover:bg-gray-200   border-2 border-transparent",
};
---

<a
	href={href}
	{...rest}
	class:list={[
		"rounded text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200",
		block && "w-full",
		sizes[size],
		styles[style],
		className,
	]}
	><slot />
</a>
