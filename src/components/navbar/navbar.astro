---
import Container from "../container.astro";
import Link from "../ui/link.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
	{
		title: "About",
		path: "#about",
	},
	{
		title: "Features",
		path: "#features",
	},
	{
		title: "Benefits",
		path: "#benefits",
	},
	{
		title: "Pricing",
		path: "#pricing",
	},
];
---

<Container>
	<header
		class="max-w-screen-xl mx-auto px-5 flex flex-col lg:flex-row justify-between items-center py-5"
	>
		<Astronav>
			<div class="flex w-full lg:w-auto items-center justify-between">
				<a href="/" class="text-lg"
					><h3 class="font-bold text-xl text-logo">Vere-ai</h3>
				</a>
				<div class="block lg:hidden">
					<MenuIcon class="w-4 h-4 text-gray-800" />
				</div>
			</div>
			<MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
				<ul class="flex flex-col lg:flex-row lg:gap-3">
					{
						menuitems.map((item, index) => (
							<>
								<li>
									<a
										href={item.path}
										class="flex lg:px-3 py-2 text-nav text-logo hover:text-orange font-normal"
									>
										{item.title}
									</a>
								</li>
							</>
						))
					}
				</ul>
				<div class="flex items-center ml-5 gap-4">
					<Link
						href="#"
						class="text-navBtn font-medium px-5"
						style="inverted"
						block
					>
						CREATE A FREE BOT
					</Link>
				</div>
			</MenuItems>
		</Astronav>
	</header>
</Container>
